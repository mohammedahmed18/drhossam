@model IEnumerable<dashboard_HospitalGuide_.Models.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>إدارة الأقسام</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>


</head>
<div class="container-xl"  style="padding-top: 20px;padding-right:90px " >
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2> &nbsp; إدارة<b> المستخدمين   </b></h2>
                    </div>
                    <div class="col-sm-6" id="try">
                        @*<a href='@Url.Action("Create", "DepartmentsController")' class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>  إضافة رعايه جديده   </span></a>*@
                        <a href='@Url.Action("Create", "Admins")'>

                            <button class="btn btn-success" data-toggle="modal" class="material-icons">إضافة مستخدم جديد</button>

                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th colspan="6" style="padding-left: 40%;padding-right: 40%;background-color: #8c9690;color: #ffffff;font-size: large;">المستحدمين</th>
                    </tr>

                    <tr>

                        <th>اسم المستخدم</th>
                        <th>كلمه السر</th>
                        <th>وظيفه المستخدم</th>
                        <th>المشرف</th>
                        <th>تعديل بيانات المستخدم</th>
                        <th> حذف المستخدم</th>

                    </tr>
                </thead>
                <tbody">
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>@Html.DisplayFor(modelItem => item.Admin_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Admin_Password)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role_ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Admin_Name)</td>


                        <td>
                            <a class="edit" href='@Url.Action("Edit", "Admins", new { id = item.Admin_ID })'>
                                <i class="material-icons" data-toggle="tooltip" title="تعديل">&#xE254;</i>
                            </a>
                        </td>
                        <td>

                            <a href='@Url.Action("Delete", "Admins", new { id = item.Admin_ID })' class="delete"><i class="material-icons" data-toggle="tooltip" title="حذف">&#xE872;</i></a>
                        </td>

                    </tr>

                    }



                </tbody>
            </table>


        </div>
    </div>
</div>

