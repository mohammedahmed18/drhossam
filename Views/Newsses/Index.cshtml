@model IEnumerable<dashboard_HospitalGuide_.Models.Newss>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>إضافة خبر جديد</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>


</head>


<div class="container-xl" >
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2> &nbsp; إضافه<b> خبر   </b></h2>
                    </div>
                    <div class="col-sm-6" id="try">
                        @*<a href='@Url.Action("Create", "DepartmentsController")' class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>  إضافة رعايه جديده   </span></a>*@
                        <a href='@Url.Action("Create", "Newsses")'>

                            <button class="btn btn-success" data-toggle="modal" class="material-icons" >إضافة خبر</button>

                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover" >
                <thead>
                    <tr>
                        <th colspan="11" style="padding-left: 40%;padding-right: 40%; background-color: #8c9690;color: #ffffff;font-size: large;">الاخبار</th>
                    </tr>

                    <tr>

                        <th>المحتوى</th>
                        <th>التاريخ</th>
                        <th>الصوره</th>
                        <th>المشرف</th>
                        <th>تعديل</th>
                        <th>حذف</th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td width="10%">@Html.DisplayFor(modelItem => item.News_Content)</td>
                            <td>@Html.DisplayFor(modelItem => item.News_Date)</td>
                            <td><img src=@Href("~/ImgUpload/" + item.News_Image) style=" width:200px; height:120px;border-radius:50%"  /></td>
                            <td>@Html.DisplayFor(modelItem => item.Admin.Admin_Name)</td>


                            <td>
                                <a class="edit" href='@Url.Action("Edit", "Newsses", new { id = item.News_ID })'>
                                    <i class="material-icons" data-toggle="tooltip" title="تعديل">&#xE254;</i>
                                </a>
                            </td>
                            <td>

                                <a href='@Url.Action("Delete", "Newsses", new { id = item.News_ID })' class="delete"><i class="material-icons" data-toggle="tooltip" title="حذف">&#xE872;</i></a>
                            </td>

                        </tr>

                    }



                </tbody>
            </table>


        </div>
    </div>
</div>
